
<div id="find">
  <form>
    <label for="query">Query: </label>
    {{ input type="text" id="query" value=search }}
  </form>
</div>

<iframe
width="500"
height="325"
frameborder="0" style="border:0"
src="https://www.google.com/maps/embed/v1/search?key=AIzaSyAs1EqVwjjQtzplL4v02060BCBctNNN6Ww
&q=thrift+stores+in+Portland">
</iframe>
  <div class="col-md-4">
    <h2>Thrift Stores</h2>
    {{#each spot in controller.arrangedContent itemController='spot'}}
      {{#if spot.kindIsThrift}}
        <li class="spot">
          {{link-to spot.model.name 'spots.show' spot}}
        </li>
      {{/if}}
    {{/each}}
  </div>
  <div class="col-md-4">
    <h2>Estate Sales</h2>
    {{#each spot in controller.arrangedContent itemController='spot'}}
      {{#if spot.kindIsEstate}}
          <li class="spot">
            {{link-to spot.model.name 'spots.show' spot}}
          </li>
      {{/if}}
    {{/each}}
  </div>
  <div class="col-md-4">
    <h2>Garage Sales</h2>
    {{#each spot in controller.arrangedContent itemController='spot'}}
      {{#if spot.kindIsGarage}}
          <li class="spot">
            {{link-to spot.model.name 'spots.show' spot}}
          </li>
      {{/if}}
    {{/each}}
  </div>


